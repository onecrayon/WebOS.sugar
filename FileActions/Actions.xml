<?xml version="1.0"?>
<action-recipes>
	<action id="com.onecrayon.WebOS.LaunchEmulator" category="actions.webos/webos.emulator-actions/0">
		<class>Spice</class>
		<title>Launch Emulator</title>
		<key-equivalent>control shift m</key-equivalent>
		<setup>
			<script>exec_command</script>
			
			<command>osascript -e 'tell application "Palm Emulator" to quit'; open -a "Palm Emulator";</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.LaunchInspector" category="actions.webos/webos.emulator-actions/1">
		<class>Spice</class>
		<title>Launch Inspector</title>
		<key-equivalent>control n</key-equivalent>
		<setup>
			<script>exec_command</script>
			
			<command>osascript -e 'tell application "Palm Inspector" to quit'; open -a "Palm Inspector";</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.LaunchResourceMonitor" category="actions.webos/webos.emulator-actions/2">
		<class>Spice</class>
		<title>Launch Resource Monitor</title>
		<setup>
			<script>work_with_app</script>
			
			<command>palm-worm</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.FollowLog" category="actions.webos/webos.terminal-actions/0">
		<class>Spice</class>
		<title>View Log in Terminal</title>
		<key-equivalent>control t</key-equivalent>
		<setup>
			<script>terminal_log</script>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.SSHEmulator" category="actions.webos/webos.terminal-actions/1">
		<class>Spice</class>
		<title>SSH Into Emulator</title>
		<key-equivalent>control shift s</key-equivalent>
		<setup>
			<script>terminal_command</script>
			
			<command>echo "Password is blank, just hit enter"; ssh -p 5522 -L 5581:localhost:8080 root@localhost</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.Novaterm" category="actions.webos/webos.terminal-actions/2">
		<class>Spice</class>
		<title>Novaterm Into Device</title>
		<key-equivalent>control shift n</key-equivalent>
		<setup>
			<script>terminal_command</script>
			
			<command>novaterm</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.PackageInstall" category="actions.webos/webos.app-actions/0">
		<class>Spice</class>
		<title>Install and Run App</title>
		<key-equivalent>control r</key-equivalent>
		<setup>
			<script>package_install</script>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.RunApp" category="actions.webos/webos.app-actions/1">
		<class>Spice</class>
		<title>Run App</title>
		<key-equivalent>control shift r</key-equivalent>
		<setup>
			<script>work_with_app</script>
			
			<command>palm-launch -i</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.CloseApp" category="actions.webos/webos.app-actions/2">
		<class>Spice</class>
		<title>Close App</title>
		<key-equivalent>control x</key-equivalent>
		<setup>
			<script>work_with_app</script>
			
			<command>palm-launch -c</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.DeleteApp" category="actions.webos/webos.app-actions/3">
		<class>Spice</class>
		<title>Delete App</title>
		<key-equivalent>command control shift x</key-equivalent>
		<setup>
			<script>work_with_app</script>
			
			<command>palm-install -r</command>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.NewApp" category="actions.webos/actions.rare/0">
		<class>Spice</class>
		<title>New WebOS App</title>
		<setup>
			<script>generate_app</script>
		</setup>
	</action>
</action-recipes>