<?xml version="1.0"?>
<action-recipes>
	<action id="com.onecrayon.WebOS.NewApp" category="actions.webos">
		<class>Spice</class>
		<title>New WebOS App</title>
		<setup>
			<script>generate_app</script>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.LaunchEmulator" category="actions.webos/webos.emulator-actions/0">
		<class>Spice</class>
		<title>Launch Emulator</title>
		<setup>
			<script>exec_command</script>
			<arguments>
				<array>
					<string>open /Applications/Palm\ Emulator.app</string>
				</array>
			</arguments>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.PackageInstall" category="actions.webos/webos.emulator-actions/1">
		<class>Spice</class>
		<title>Install and Launch App</title>
		<setup>
			<script>package_install</script>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.CloseApp" category="actions.webos/webos.emulator-actions/2">
		<class>Spice</class>
		<title>Close App</title>
		<setup>
			<script>work_with_app</script>
			<arguments>
				<array>
					<string>palm-launch -c</string>
				</array>
			</arguments>
		</setup>
	</action>
	
	<action id="com.onecrayon.WebOS.DeleteApp" category="actions.webos/webos.emulator-actions/3">
		<class>Spice</class>
		<title>Delete App</title>
		<setup>
			<script>work_with_app</script>
			<arguments>
				<array>
					<string>palm-install -r</string>
				</array>
			</arguments>
		</setup>
	</action>
</action-recipes>